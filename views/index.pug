extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    // Custom styles for this template
    link(href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet')
    link(href='/stylesheets/signin.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')

block body
    form.form-signin(action='/login' method='post')
        h2.login-title.form-title Enter OpenSensor.io credentials
        label.sr-only(for='inputUsername') Username
        input#inputUsername.form-control(type='text', placeholder='Username', required='', autofocus='', name='username')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
        label.sr-only Topic
        input#inputTopic.form-control(type='text', placeholder='Topic', required='', name='topic')
        br

        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

block scripts
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='/javascripts/main.js' type='text/javascript')

